<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="be.occam.android.minimaxi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <uses-feature android:name="android.hardware.camera" android:required="true" />

        <activity
            android:name="be.occam.android.minimaxi.SplashActivity"
            android:label="Mini Maxi Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.occam.android.minimaxi.CodeActivity"
            android:label="Mini Maxi Code">
        </activity>
        <activity
            android:name="be.occam.android.minimaxi.WelcomeActivity"
            android:label="Mini Maxi Welcome">
        </activity>
    </application>

</manifest>